
@{
    Layout = "Login_Layout";
    ViewData["Title"] = "Login";
}

<h1 class="text-center">เข้าสู่ระบบ</h1>

<div class="row justify-content-center">
    <!--ใช้ class cloum 6-->
    <div class="col-md-6 col-lg-4">
        <form action="/Account/Login" method="post" class="border p-4 rounded shadow-sm">
            <div class="form-group">
                <label for="UsernameOrEmail"> Username or Email </label>
                <input type="text" id="UsernameOrEmail" name="UsernameOrEmail" class="form-control" placeholder="Enter your Username or Email" required />
                
                <span class="text-danger" id="usernameError"></span>
            </div>

            <!-- ส่วน Password -->
            <div class="form-group">
                <label for="password">Password</label>
                <!-- ช่องกรอกข้อมูลสำหรับ Password -->
                <input type="password" id="password" name="Password" class="form-control" placeholder="Enter your password" required />
            </div>

            <!-- Remember Me Checkbox -->
            <div class="form-group form-check">
                <input type="checkbox" id="rememberMe" name="RememberMe" class="form-check-input" />
                <label for="rememberMe" class="form-check-label">Remember me</label>
            </div>

            <!-- ปุ่ม Log in -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>

            <!-- ลิงก์ไปหน้าลงทะเบียนสำหรับผู้ใช้ใหม่ -->
            <div class="form-group">
                <a href="/Account/Register">Don't have an account? Register here.</a>
            </div>

            @Html.ValidationMessage("admin & password" , "", new { @class = "text-danger" })

        </form>
    </div>
</div>


