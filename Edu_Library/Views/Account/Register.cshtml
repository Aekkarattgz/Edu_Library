
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">สมัครสมาชิก</h1>
<div class="row justify-content-center">
    <!--ใช้ class cloum 6-->
    <div class="col-md-6 col-lg-4">
        <form action="/Account/Register" method="post" class="border p-4 rounded shadow-sm">
            <div class="form-group">
                <label for="username" >Entert your username</label>
                <input type="text" id="username" name="Username" class="form-control" placeholder="Entert your username" required/>
            </div>
            <div class="form-group">
                <label for="email">Entert your email address</label>
                <input type="email" id="email" name="Email" class="form-control" placeholder="email address" required />
            </div>
            <div class="form-group">
                <label for="password">Entert your password</label>
                <input type="password" id="password" name="Passeord" class="form-control" placeholder="Entert your password" required />
            </div>
            <div class="form-group">
                <label for="cpassword">Confirm your password by entering it again.</label>
                <input type="password" id="cpassword" name="cpassword" class="form-control" placeholder="Confirm your password by entering it again." required />
                @Html.ValidationMessage("Cpassword", "", new { @class = "text-danger" }) 
            </div>
            <br />
            <div class="form-group ">
                <button type="submit" class="btn btn-primary ">Register</button>
            
                <a class="btn btn-dark " href="/Account/Login">Back to login</a>
            </div>

        </form>

    </div>

</div>
