@model IEnumerable<Edu_Library.Models.Book_tb> 
@* <!-- กำหนดว่า Model ที่ใช้ใน View นี้เป็นรายการของ Book_tb --> *@

<div class="container"> <!-- สร้าง container สำหรับจัดตำแหน่ง -->
    <div class="row"> <!-- เริ่มต้น row สำหรับแสดงข้อมูลหนังสือ -->
        @foreach (var book in Model) 
        @* <!-- วนลูปข้อมูลหนังสือแต่ละเล่ม --> *@
        {
            <div class="col-md-3 mb-4"> <!-- กำหนดขนาดของ card ให้อยู่ในคอลัมน์ 1/4 ของหน้าจอ -->
                <div class="card h-100"> <!-- สร้าง card สำหรับแต่ละหนังสือ -->
                    <img src="@book.CoverImage" class="card-img-top" alt="@book.Name" style="height: 200px; object-fit: cover;">
                    <!-- แสดงภาพปกหนังสือโดยใช้ link ของ CoverImage, ปรับขนาดภาพให้เหมาะสม -->
                    <div class="card-body"> <!-- ส่วนของเนื้อหาภายในการ์ด -->
                        <h2 class="card-title">@book.Name</h2> <!-- แสดงชื่อหนังสือ -->
                        <h3 class="card-text">@book.Detail</h3> <!-- แสดงรายละเอียดหนังสือ -->
                        <h5 class="card-text">
                            <strong>Category ID:</strong> @book.CategoryId <br /> <!-- แสดง CategoryId ของหนังสือ -->
                            <strong>Category Name:</strong> @book.Category?.Name <!-- แสดงชื่อหมวดหมู่จาก Navigation Property -->
                        </h5>
                    </div>
                    <div class="card-footer"> <!-- ส่วนท้ายของการ์ด -->
                        <small class="text-muted">Author: @book.Author</small> <!-- แสดงชื่อผู้เขียน -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>
