{
  // กำหนดค่าการบันทึกข้อมูล (Logging) ของแอปพลิเคชัน
  "Logging": {
    // กำหนดระดับของ log สำหรับแต่ละแหล่งข้อมูล
    "LogLevel": {
      // กำหนดระดับ log สำหรับแอปพลิเคชันทั้งหมดเป็น "Information"
      "Default": "Information",

      // กำหนดระดับ log สำหรับ "Microsoft.AspNetCore" เป็น "Warning" เพื่อให้บันทึกเฉพาะการแจ้งเตือนและข้อผิดพลาดจาก Asp.Net Core
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // กำหนดข้อมูลการเชื่อมต่อฐานข้อมูล
  "ConnectionStrings": {
    // กำหนดค่า Connection String สำหรับการเชื่อมต่อกับฐานข้อมูล "LibraryDB" บน SQL Server
    "DefaultConnection": "Data Source=GIGABYTE\\SQLEXPRESS;Initial Catalog=LibraryDB;User ID=sa;Password=1234;Trust Server Certificate=True"
  },

  // กำหนดค่า AllowedHosts เพื่อควบคุมว่าแอปพลิเคชันจะรับการเชื่อมต่อจากโฮสต์ใดบ้าง
  "AllowedHosts": "*"
}
